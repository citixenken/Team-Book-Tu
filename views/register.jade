extends layout

block content
  .container
    h1= title
    p An Oasis of Learning and Literacy
    br
    p.lead Register Here
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
        label(for='username') Username
        input.form-control(type='text', name="username", placeholder='Enter Username', autofocus)
      .form-group
        label(for='email') Email
        input.form-control(type='text', name="email", placeholder='Email')
      .form-group
        label(for='password') Password
        input.form-control(type='password', name="password", placeholder='Password') 
      .form-group
        label(for='confirm') Confirm Password
        input.form-control(type='password', name="confirm", placeholder='Confirm Password') 
      button.btn.btn-primary(type='submit') Register
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
    br
    h4= info